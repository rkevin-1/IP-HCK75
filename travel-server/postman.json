{
  "info": {
    "name": "Travel Site API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/logout",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/profile",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Destinations",
      "item": [
        {
          "name": "Get All Destinations",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/destinations"
          }
        },
        {
          "name": "Create Destination",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/destinations",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Destination\",\n  \"description\": \"A beautiful place to visit\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Destination",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/destinations/{{destinationId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Destination\",\n  \"description\": \"An even more beautiful place to visit\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Destination",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/destinations/{{destinationId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/destination/{{destinationId}}/reviews",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great place to visit!\",\n  \"rating\": 5\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Review",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/reviews/{{reviewId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated review content\",\n  \"rating\": 4\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/reviews/{{reviewId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        },
        {
          "name": "Get Reviews for Destination",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/destination/{{destinationId}}/reviews"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "authToken",
      "value": "your_jwt_token_here"
    },
    {
      "key": "destinationId",
      "value": "1"
    },
    {
      "key": "reviewId",
      "value": "1"
    }
  ]
}
